<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dec_BinConverter.MainPage">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <BoxView BackgroundColor="{DynamicResource Primary}"
                     CornerRadius="20"
                     Grid.Column="1"
                     Grid.Row="1"
                     Grid.RowSpan="2"/>

            <Label Text="Liczba Decymalna"
                   Grid.Column="1"
                   Grid.Row="1"/>
            <Entry x:Name="EntDecimal"
                   Completed="Convert"
                   Grid.Column="1"
                   Grid.Row="2"/>

            <BoxView BackgroundColor="{DynamicResource PrimaryDark}"
                     CornerRadius="20"
                     Grid.RowSpan="2"
                     Grid.Column="2"
                     Grid.Row="1"/>

            <Label Text="Liczba Binarna"
                   Grid.Column="2"
                   Grid.Row="1"/>
            <Entry x:Name="EntBinary"
                   Completed="Convert"
                   Grid.Row="2"
                   Grid.Column="2"/>

        </Grid>
    </ScrollView>
</ContentPage>
