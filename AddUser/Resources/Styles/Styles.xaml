<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label" Class="Header">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryDark}"/>
    </Style>

    <Style TargetType="FlexLayout" Class="Block">
        <Setter Property="Direction" Value="Column"/>
        <Setter Property="AlignItems" Value="Center"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="Padding" Value="10,10,50,10"/>
        <Setter Property="HeightRequest" Value="250"/>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="40"/>
        <Setter Property="RowSpacing" Value="10"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="WidthRequest" Value="170"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="WidthRequest" Value="170"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
